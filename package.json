{
  "name": "three-gltf-viewer",
  "productName": "glTF Viewer",
  "version": "1.1.0",
  "description": "Preview glTF models using three.js and a drag-and-drop interface.",
  "main": "src/main.js",
  "browser": {
    "main": "src/browser.js",
    "jimp": "./node_modules/jimp/index.js",
    "cesium": "./lib/cesium/index.js",
    "fs-extra": false
  },
  "scripts": {
    "electron": "electron .",
    "build:quick": "browserify src/browser.js tools/Tool*.js --no-dedupe -p [ factor-bundle -o 'cat > bundle.`basename $FILE`' ] -o bundle.common.js",
    "build:dev": "browserify src/browser.js tools/Tool*.js --debug --no-dedupe -p [ factor-bundle -o 'cat > bundle.`basename $FILE`' ] -o bundle.common.js",
    "build:uglify": "browserify src/browser.js tools/Tool*.js --debug -g uglifyify --no-dedupe -p [ factor-bundle -o 'exorcist bundle.`basename $FILE`.map > bundle.`basename $FILE`' ] | exorcist bundle.common.js.map > bundle.common.js",
    "build:production": "browserify src/browser.js tools/Tool*.js -g uglifyify --no-dedupe -p [ factor-bundle -o 'cat > bundle.`basename $FILE`' ] | cat > bundle.common.js",
    "build:validator": "echo \"window.gltfValidator = require('gltf-validator');\" | browserify - > lib/gltf-validator.js",
    "package": "npm run package:windows && npm run package:mac && npm run package:linux",
    "package:windows": "electron-packager . gltf-viewer --overwrite --asar --platform=win32 --arch=ia32 --icon=assets/icons/glTF-Viewer.ico --out=dist --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"glTF Viewer\"",
    "package:mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/glTF-Viewer.icns --out=dist",
    "package:linux": "electron-packager . gltf-viewer --overwrite --asar --platform=linux --arch=x64 --icon=assets/icons/glTF-Viewer.png --out=dist",
    "watch": "watchify src/browser.js tools/Tool*.js --debug --no-dedupe -p [ factor-bundle -o 'cat > bundle.`basename $FILE`' ] -v -o bundle.common.js",
    "start": "node src/server.js",
    "start:dev": "npm run build:dev && node src/server.js",
    "dev": "concurrently \"npm run watch\" \"nodemon src/server.js\"",
    "dev:electron": "concurrently \"watchify src/browser.js -o bundle.js\" \"npm run electron\"",
    "test": "node scripts/gen_test.js",
    "deploy": "npm run build && now --static && npm run clean",
    "clean": "rm bundle.*",
    "postversion": "git push && git push --tags"
  },
  "now": {
    "alias": "gltf-viewer.donmccurdy.com",
    "public": true
  },
  "keywords": [
    "gltf",
    "three.js",
    "three",
    "3d",
    "model",
    "modeling",
    "webgl"
  ],
  "author": "Don McCurdy <dm@donmccurdy.com> (https://www.donmccurdy.com)",
  "license": "MIT",
  "dependencies": {
    "clone": "^2.1.1",
    "dat.gui": "^0.6.1",
    "data-uri-to-buffer": "^2.0.0",
    "earcut": "^2.1.2",
    "express": "^4.16.2",
    "file-saver": "^1.3.3",
    "gltf-validator": "^2.0.0-dev.1.5",
    "image-size": "^0.6.1",
    "jimp": "^0.2.28",
    "jsonpath": "^1.0.0",
    "jszip": "^3.1.3",
    "mersenne-twister": "^1.1.0",
    "mime-type": "^3.0.5",
    "multer": "^1.3.0",
    "mustache": "^2.3.0",
    "open": "0.0.5",
    "query-string": "^4.3.4",
    "renderjson": "^1.3.1",
    "serve": "^5.2.4",
    "setimmediate": "^1.0.5",
    "sha.js": "^2.4.9",
    "sprintf-js": "^1.1.1",
    "three": "^0.88.0",
    "three-vignette-background": "^1.0.3",
    "tween.js": "^16.6.0",
    "urijs": "^1.19.0",
    "zipjs-browserify": "^1.0.1"
  },
  "devDependencies": {
    "browserify": "^14.5.0",
    "budo": "^9.4.7",
    "chalk": "^2.1.0",
    "concurrently": "^3.5.0",
    "electron": "^1.7.9",
    "electron-packager": "^9.1.0",
    "exorcist": "^1.0.0",
    "factor-bundle": "^2.5.0",
    "glslify": "^6.1.0",
    "node-fetch": "^1.7.3",
    "nodemon": "^1.12.1",
    "source-map-explorer": "^1.5.0",
    "uglifyify": "^4.0.4",
    "watchify": "^3.9.0"
  },
  "browserify": {
    "transform": [
      "glslify"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "data",
      "lib",
      "tools",
      "src/browser.js",
      "src/viewer.js",
      "src/drop-controller.js",
      "bundle*.js",
      "bundle*.js.map"
    ]
  }
}
